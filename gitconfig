[color]
  ui = auto
[core]
  excludesfile = ~/.gitignore
  safecrlf = warn
  autocrlf = input
[pull]
  ff = only
[push]
  default = simple
[filter "lfs"]
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
[includeIf "gitdir:~/dev/personal/"]
    path = ~/.gitconfig.personal
[includeIf "gitdir:~/dev/main-method/"]
    path = ~/.gitconfig.main-method
[includeIf "gitdir:~/dev/dvag/"]
    path = ~/.gitconfig.dvag
